@model Assignment.Models.Post

@{
    ViewData["Title"] = "Details";
}

<div class="container bg-white pt-5">
    <h1>Details</h1>

    <div>
        <h4>Post</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AuthorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AuthorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dd class="col-sm-10">
                <a asp-action="IndexFiltered" asp-route-comment="@Model.Comment">@Html.DisplayFor(model => model.Comment)</a>
            </dd>
            <dd class="col-sm-10">
                <img decoding="async" src="@("~/images/" + Model.ImageName)" asp-append-version="true" width="250px" height="250px" />
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateAdded)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
